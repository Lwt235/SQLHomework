<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.competition.mapper.RoleMapper">

    <!-- Result Map -->
    <resultMap id="roleResultMap" type="com.competition.entity.Role">
        <id property="roleId" column="role_id"/>
        <result property="roleCode" column="role_code"/>
        <result property="roleName" column="role_name"/>
        <result property="description" column="description"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
        <result property="deleted" column="is_deleted"/>
    </resultMap>

    <!-- Select All -->
    <select id="findAll" resultMap="roleResultMap">
        SELECT * FROM Role WHERE is_deleted = FALSE
    </select>

    <!-- Select By Id -->
    <select id="findById" resultMap="roleResultMap">
        SELECT * FROM Role 
        WHERE role_id = #{roleId} 
          AND is_deleted = FALSE
    </select>

    <!-- Select All By Ids -->
    <select id="findAllById" resultMap="roleResultMap">
        SELECT * FROM Role 
        WHERE role_id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
        AND is_deleted = FALSE
    </select>

</mapper>
